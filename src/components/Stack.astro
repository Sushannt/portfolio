---
const { containerTitle, selectIcons } = Astro.props;
import { Icon } from "astro-icon/components";
---

<div class="flex flex-col gap-4 -skew-y-6 mx-auto md:mx-0">
  <h1 class="text-center text-3xl tracking-widest mb-6 font-Satoshi-B">
    {containerTitle}
  </h1>
  <div class="grid grid-cols-3 grid-rows-3 gap-12 md:gap-4 p-5">
    {
      selectIcons.map((icon: Object) => (
        <Icon
          name={Object.values(icon)[0]}
          class="size-12 md:size-16 hover:scale-125"
        />
      ))
    }
  </div>
</div>
